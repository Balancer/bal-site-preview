{
    "name": "balancer/b2f-site-preview",
    "license": "GPL-3.0",

    "type": "bors-component",

    "authors": [
        {
            "name": "Balancer",
            "email": "balancer@balancer.ru"
        }
    ],

	"prefer-stable": true,
	"minimum-stability": "dev",

    "require": {
		"balancer/b2-framework": "*",
		"balancer/b2-composer-plugin": "*",
		"balancer/b2f-router-fastroute": "*"
    },

    "autoload": {
		"classmap": ["classes/"]
    },

	"scripts": {
		"post-update-cmd": "b2f_composer::update",
		"post-install-cmd": "b2f_composer::install",
		"post-autoload-dump": "b2f_composer::post_autoload_dump",
		"post-package-update": "b2f_composer::post_package_update"
	},

	"extra": {
		"bors-calls": {
			"b2f_fastroute::register": [
				"GET /_b2f/sp/{urlencoded} b2f_site_preview::make_link",
				"GET /_cg/b2fsp/[0-9]{4}-[0-9]{2}/{hash}\\.png b2f_site_preview"
			]
		}
	}
}
